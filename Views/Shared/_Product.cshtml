@model ZaunShop.Models.DomainModels.Product

@{    
    string url = Context.Request.Path;
}

<div class="card" style="width: 18rem;">
    <a class="" href="@url/@Model.id">
        <img class="card-img-top" src="~/content/images/Jacket.jpg" alt="@Model.name">
    </a>

    <div class="card-body">
        <h5 class="card-title">@Model.name</h5>
        <div class="d-flex flex-row justify-content-between align-items-center">
            <h7 class="card-title mr-2">@Model.price kr</h7>
            <form>
                <button class="btn btn-primary" type="submit" onclick="buyFunction(@Model.id)">
                    Buy
                </button>
            </form>
        </div>

    </div>
</div>