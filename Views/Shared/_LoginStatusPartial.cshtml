@if (User == null || User.Identity == null || User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline" asp-action="Logout" asp-controller="Account">
        Welcome @User?.Identity?.Name
        <button type="submit" class="btn btn-link  text-white">Logout</button>
    </form>
}
else
{
    <a asp-action="Login" asp-controller="Account" class="btn btn-link">Login</a>
}