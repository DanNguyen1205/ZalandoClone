@{
}
@model ZaunShop.Models.CredentialViewModel

<div class="d-flex ">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 row">

            <label asp-for="Username"></label>

            <div class="col-5 mb-3">
                <input type="text" asp-for="Username" value="" class="form-control" />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>

        </div>

        <div class="mb-3 row">
            <label asp-for="Password"></label>

            <div class="col-5 mb-3">
                <input type="password" asp-for="Password" value="" asp-validation-for="Password" class="form-control" />
            </div>
        </div>


        <div class="mb-3 row">
            <div class="col-5">
                <button type="submit" asp-action="Login" asp-controller="Account" class="form-control btn btn-primary">Login</button>
            </div>
        </div>

    </form>
</div>