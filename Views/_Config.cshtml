<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZaunShop</title>
    @*     <link rel="stylesheet" href="~/lib/bootstrap/scss/bootstrap.css" />
    *@
    <link rel="stylesheet" href="~/css/mystyle.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ZaunShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/all.css" />

</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
